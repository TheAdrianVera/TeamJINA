<h1> Hi! Please sign up by writing your name</h1>

<% if @user.errors.present? %>
	<% @user.errors.full_messages.each do |msg| %>
		<p><%= msg %></p>
	<% end %>
<% end%>

<%= form_for @user do |f| %>
<p>
	<%= f.label :first_name %><br>
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :email %><br>
	<%= f.email_field :email %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>